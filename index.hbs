{{!< default}}

<!-- BLOG COVER-->
<div class="blog-cover-container">
  <div class="featured-image">
    {{#if @blog.cover}}
      <img src="{{@blog.cover}}" alt="{{@blog.title}}"/>
    {{else}}
      <img src="{{asset "images/HIRO95_ukabukuragetotokyo_resize.jpg"}}" alt="{{@blog.title}}"/>
    {{/if}}
  </div>
  <div class="featured-info">
    {{#if @blog.description}}
      <h1>{{@blog.description}}</h1>
    {{/if}}
  </div>
</div>

{{! The main content area on the homepage }}

<!-- END OF FEATURED POSTS -->

<div class="content-container home-container">
  <div class="row">
    <div class="medium-8 column main-column">
			<div class="card card-dark">
				<div class="card-header text-center">
					<div class="card-title">新着記事</div>
				</div>
				<div class="card-content">
					{{#foreach posts}}
						{{> content_post}}
					{{/foreach}}
				</div>
			</div>
    </div>
    <div class="medium-4 column side-column-right">
			<div class="card card-dark card-author-fixed">
				<div class="card-header">
					<div class="card-title">slont</div>
				</div>
				<div class="card-content">
					<div class="author-img">
						<img src="/content/images/2016/09/IMG_20160927_131859_3.jpg" alt="slont"/>
					</div>
					<div class="author-status">
						<p>
							元金融エンジニア。メイン言語はJava, HTML, JavaScript, Python, Kotlinあたり。SECCONやCTF、NLP、機械学習に興味あり。<br>
							お仕事の依頼は<a href="https://twitter.com/_slont">Twitter</a>からお願いします。
						</p>
					</div>
				</div>
				<div class="card-action">
					<a href="/author/slont/" target="_blank">Authorページ</a>
				</div>
			</div>
      <!-- ResponsiveDisplayAd01 -->
      <div class="card card-dark card-ad">
				<div class="card-header text-center">
					<div>スポンサーリンク</div>
				</div>
				<div class="card-content">
					<ins class="adsbygoogle"
							 style="display:block"
							 data-ad-client="ca-pub-9576950957758188"
							 data-ad-slot="8626094554"
							 data-ad-format="auto"></ins>
					<script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
				</div>
      </div>
      <div class="card card-dark">
				<div class="card-header text-center">
					<div class="card-title">人気記事</div>
				</div>
				<div class="card-content">
					{{popular_posts max=8 mode=1}}
				</div>
      </div>
      <div class="tags-area card card-dark">
				<div class="card-header text-center">
					<div class="card-title">タグ</div>
				</div>
				<div class="card-content">
					<div class="post-tags">{{tag_links all=true}}</div>
				</div>
      </div>
    </div>
  </div>
</div>

{{pagination}}
{{!< default}}

{{#author}}
  <div class="blog-cover-container">
    <div class="featured-image">
      {{#if cover}}
        <img src="{{cover}}" alt="{{name}}"/>
      {{else}}
        {{#if @blog.cover}}
          <img src="{{@blog.cover}}" alt="{{name}}"/>
        {{else}}
          <img src="{{asset "images/HIRO95_ukabukuragetotokyo_resize.jpg"}}" alt="{{name}}"/>
        {{/if}}
      {{/if}}
    </div>
    <div class="featured-info hide-for-small-only">
      <div class="author-status">
        <div class="author-img">
          {{#if image}}
            <img src="{{image}}" alt="{{name}}" class="align-center"/>
          {{/if}}
        </div>
        <h1 class="author-title">{{name}}</h1>
      </div>
    </div>
  </div>
  <div class="blog-description">
		<div class="card card-dark card-author hide-for-small-only">
			<div class="card-content">
				<div class="author-status">
					{{#if website}}
						<span><a href="{{website}}" target="_blank">{{website}}</a></span>
					{{/if}}
					{{#if bio}}
						<p>{{bio}}</p>
					{{/if}}
				</div>
			</div>
		</div>

		<div class="card card-dark card-author show-for-small-only">
			<div class="card-content">
				{{#if image}}
					<div class="author-img">
						<img src="{{image}}" alt="{{name}}"/>
					</div>
				{{/if}}
				<div class="author-status">
					<h3>{{name}}</h3>
					{{#if website}}
						<span><a href="{{website}}" target="_blank">{{website}}</a></span>
					{{/if}}
					{{#if bio}}
						<p>{{bio}}</p>
					{{/if}}
				</div>
			</div>
		</div>
  </div>
{{/author}}

<div class="content-container home-container">
  <div class="row">
    <div class="medium-8 column main-column">
			<div class="card card-dark">
				<div class="card-content">
					{{#foreach posts}}
						{{> content_post}}
					{{/foreach}}
				</div>
			</div>
    </div>
		<div class="medium-4 column side-column-right">
			<!-- ResponsiveDisplayAd01 -->
			<div class="card card-dark card-ad">
				<div class="card-header text-center">
					<div>スポンサーリンク</div>
				</div>
				<div class="card-content">
					<ins class="adsbygoogle"
							 style="display:block"
							 data-ad-client="ca-pub-9576950957758188"
							 data-ad-slot="8626094554"
							 data-ad-format="auto"></ins>
					<script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
				</div>
			</div>
			<div class="card card-dark">
				<div class="card-header text-center">
					<div class="card-title">人気記事</div>
				</div>
				<div class="card-content">
					{{popular_posts max=8 mode=1}}
				</div>
			</div>
			<div class="tags-area card card-dark">
				<div class="card-header text-center">
					<div class="card-title">タグ</div>
				</div>
				<div class="card-content">
					<div class="post-tags">{{tag_links all=true}}</div>
				</div>
			</div>
		</div>
  </div>
</div>

{{pagination}}